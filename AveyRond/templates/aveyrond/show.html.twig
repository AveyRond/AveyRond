{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}
<main>
    <article>
            <img src={{ article.image }}>
        <div>
            <h1>{{ article.title }}</h1>
            <p class="content">{{ article.content | raw }}</p>
            <div>Ecrit le {{ article.createdAt | date('d/m/Y') }} par {{ article.author }} dans la catégorie {{ article.category.categoryType }}</div>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-info">Éditer</a>
            <a href="{{ path('article_delete', {'id': article.id}) }}" class="btn btn-danger">Supprimer</a>
            {% endif %}
            <hr>
        </div>
    </article> 
<main>
{% endblock %}
