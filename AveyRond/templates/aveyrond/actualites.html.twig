{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}

{% block body %}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('accueil') }}">Accueil</a></li>
    <li class="breadcrumb-item active">Actualités</li>
</ol>

<main>
    {% for articlesActu in articlesActu %}
    <article>
        <img src={{ articlesActu.image }}>
        <div>
            <h1>{{ articlesActu.title }}</h1>
            <p class="content">{{ articlesActu.content | raw }}</p>
            <div>Ecrit le {{ articlesActu.createdAt | date('d/m/Y') }} par <span>{{ articlesActu.author }}</span> dans la catégorie {{ articlesActu.category.categoryType }}</div>
            <a href="{{ path('show_article', {'id': articlesActu.id}) }}" class="btn btn-outline-primary">Lire la suite</a>
            <hr>
        </div>
    </article>
    {% endfor %}
<main>

{% endblock %}
