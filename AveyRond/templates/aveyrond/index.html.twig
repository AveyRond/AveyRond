
{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<main id="main_index">
    <h1>Prochain Match :</h1>
    <table class="table table-hover" data-page-length="5">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="align-middle">Equipe</th>
                <th scope="col" class="align-middle">Equipe Adverse</th>
                <th scope="col" class="align-middle">Date et Heure</th>
            </tr>
        </thead>
        <tbody>  
        {% if matchs is defined %}
        {% for match in matchs %}
            <tr>
                <td>{{ match.Equipe }}</td>
                <td>{{ match.Adversaire }}</td>
                <td>{{ match.DateMatch | date('d/m/Y H:i') }}</td>
            </tr>
        {% endfor %}
        {% endif %}
        </tbody>
    </table>
    
    <section class="articles">

        {% for article in articles %}
            <article id="index">
                <img src={{ article.image }}>
                <div>
                    <h1>{{ article.title }}</h1>
                    <p class="content">{{ article.content | raw }}</p>
                    <div>Ecrit le {{ article.createdAt | date('d/m/Y') }} par <span>{{ article.author }}</span> dans la cat√©gorie {{ article.category.categoryType }}</div>
                    <a href="{{ path('show_article', {'id': article.id}) }}" class="btn btn-outline-primary">Lire la suite</a>
                    <hr>
                </div>
            </article> 
        {% endfor %}

    </section>
</main>
{% endblock %}