{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<section class="articles">

    {% for article in articles %}
        <article>
            <h1>{{ article.title }}</h1>
            <div>Ecrit le {{ article.createdAt | date('d/m/Y') }} par {{ article.author }} dans la cat√©gorie {{ article.category.categoryType }}</div>
            <img src={{ article.image }}>
            <div class="content">{{ article.content | raw }}</div>
            <a href="{{ path('show', {'id': article.id}) }}" class="btn btn-outline-primary">Lire la suite</a>
            <hr>
        </article> 
    {% endfor %}

</section>

{% endblock %}
