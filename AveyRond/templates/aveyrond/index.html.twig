{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

<section class="articles">

    {% for article in articles %}
        <article>
            <h1>{{ article.title }}</h1>
            <div class="content">{{ article.content }}</div>
            <div>Ecrit le {{ article.createdAt | date('d/m/Y') }} par {{ article.author }}</div>
            <img src={{ article.image }}>
            <div>{{ article.category.categoryType }}</div>
        </article> 
    {% endfor %}

</section>

{% endblock %}
